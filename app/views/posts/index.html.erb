<div class="create-recipe">
  <%= link_to 'Create Recipe', new_post_path %>
</div>

  <div class="flash-alert">
    <p class="flash-alert"><%= alert %></p>
  </div>

<% @post.each do |post| %>
<article>
  <h2><%= link_to post.title, post_path(post) %></h2>
  
  <%= image_tag post.image_url(:medium).to_s %>
  
  <p><%= markdown(post.text).html_safe %></p>
  
  <span class="edit"><%= link_to 'Edit', edit_post_path(post) %></span>
  <span class="destroy"><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></span>
</article>
<hr>    
<% end %>
